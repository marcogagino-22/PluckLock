<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.syntaxblitz.plucklock.SettingsActivity" >
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prefs_threshold"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <EditText
        android:id="@+id/pref_threshold_edit"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView1"
        android:layout_toEndOf="@+id/textView1"
        android:layout_marginLeft="10sp"
        android:ems="10"
        android:inputType="number|numberDecimal" />
    
    <Button
	    android:id="@+id/set_threshold"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pref_threshold_edit"
        android:layout_alignBottom="@+id/pref_threshold_edit"
        android:layout_toRightOf="@+id/pref_threshold_edit"
        android:layout_toEndOf="@+id/pref_threshold_edit"
	    android:text="SET threshold" />

	<TextView
	    android:id="@+id/prefs_threshold_label"
	    android:layout_below="@+id/pref_threshold_edit"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/prefs_threshold_description" />
	
	<CheckBox
        android:id="@+id/checkBox1"
        android:layout_below="@+id/prefs_threshold_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prefs_enable_device_admin" />

	<TextView
	    android:layout_below="@+id/checkBox1"
	    android:id="@+id/textView2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/prefs_enable_device_admin_description"
	    android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>