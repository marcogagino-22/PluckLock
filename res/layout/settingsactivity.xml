<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.syntaxblitz.plucklock.SettingsActivity" >
    
    <TextView
        android:id="@+id/threshold_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/threshold"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <EditText
        android:id="@+id/threshold_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/threshold_text"
		android:layout_toEndOf="@+id/threshold_text"
        android:ems="10"
		android:layout_marginLeft="10sp"
        android:gravity="center_vertical"
        android:inputType="number|numberDecimal" />    

	<TextView
	    android:id="@+id/threshold_description"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/threshold_value"
	    android:text="@string/threshold_description" />
	
	<TextView
        android:id="@+id/device_admin_text"
        android:layout_marginTop="15sp"
        android:layout_below="@+id/threshold_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/admin_settings"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	<CheckBox
        android:id="@+id/enable_device_admin"
        android:layout_below="@+id/device_admin_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enable_device_admin" />

	<TextView
	    android:id="@+id/enable_device_admin_description"
	    android:layout_below="@+id/enable_device_admin"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/enable_device_admin_description"
	    android:textAppearance="?android:attr/textAppearanceSmall" />


</RelativeLayout>